<% layout('layouts/boilerplate') %>
<body>
  <section class="container py-5 text-center">
    <h1 class="display-5 mb-3">Find your next stay with TripSpot</h1>
    <p class="lead mb-4">
      Discover unique homes, apartments, and stays across destinations you love.
    </p>
    <div class="d-flex justify-content-center gap-2">
      <a href="/listing" class="btn btn-dark">
        <i class="fas fa-compass me-2"></i>Explore Listings
      </a>
      <a href="/listing/new" class="btn btn-outline-dark">
        <i class="fas fa-plus me-2"></i>List Your Place
      </a>
    </div>
  </section>

  <section class="container pb-5">
    <div class="row g-4 text-center">
      <div class="col-md-4">
        <div class="p-4 h-100 border rounded-3">
          <i class="fas fa-house fa-2x mb-3"></i>
          <h5 class="mb-2">Curated Stays</h5>
          <p class="text-muted mb-0">
            A growing collection of quality homes and apartments.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 h-100 border rounded-3">
          <i class="fas fa-shield-check fa-2x mb-3"></i>
          <h5 class="mb-2">Trusted Reviews</h5>
          <p class="text-muted mb-0">
            See ratings and feedback from real guests.
          </p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="p-4 h-100 border rounded-3">
          <i class="fas fa-tags fa-2x mb-3"></i>
          <h5 class="mb-2">Fair Pricing</h5>
          <p class="text-muted mb-0">Transparent prices with no surprises.</p>
        </div>
      </div>
    </div>
  </section>
</body>
