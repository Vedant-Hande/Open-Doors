      <div class="mobile-nav">
        <a href="/listing" class="mobile-nav-item">
          <div class="mobile-nav-icon">
            <i class="fas fa-home"></i>
          </div>
          <span class="mobile-nav-text">Home</span>
        </a>
        <a href="/listing" class="mobile-nav-item">
          <div class="mobile-nav-icon">
            <i class="fas fa-search"></i>
          </div>
          <span class="mobile-nav-text">Explore</span>
        </a>
        <a href="/listing/new" class="mobile-nav-item premium">
          <div class="mobile-nav-icon">
            <i class="fas fa-plus"></i>
          </div>
          <span class="mobile-nav-text">List Property</span>
          <div class="mobile-premium-badge">Pro</div>
        </a>
      </div>

      <% if (typeof user !== 'undefined' && user) { %>
      <div class="mobile-user-section">
        <div class="mobile-user-card">
          <div class="mobile-user-avatar">
            <div class="mobile-avatar-bg">
              <i class="fas fa-user"></i>
            </div>
            <div class="mobile-status-indicator online"></div>
          </div>
          <div class="mobile-user-info">
            <div class="mobile-user-name">
              <%= user.firstName %> <%= user.lastName %>
            </div>
            <div class="mobile-user-email"><%= user.email %></div>
            <div class="mobile-user-badge">
              <i class="fas fa-crown"></i>
              <span><%= user.accountType %></span>
            </div>
          </div>
        </div>
        <div class="mobile-user-actions">
          <a href="/user/profile" class="mobile-action-item">
            <div class="action-icon">
              <i class="fas fa-user-circle"></i>
            </div>
            <div class="action-content">
              <div class="action-title">My Profile</div>
              <div class="action-subtitle">Manage your account</div>
            </div>
          </a>
          <a href="/user/dashboard" class="mobile-action-item">
            <div class="action-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="action-content">
              <div class="action-title">Dashboard</div>
              <div class="action-subtitle">View your activity</div>
            </div>
          </a>
          <a href="/user/settings" class="mobile-action-item">
            <div class="action-icon">
              <i class="fas fa-cog"></i>
            </div>
            <div class="action-content">
              <div class="action-title">Settings</div>
              <div class="action-subtitle">Preferences & privacy</div>
            </div>
          </a>
          <a href="/user/logout" class="mobile-action-item logout">
            <div class="action-icon">
              <i class="fas fa-sign-out-alt"></i>
            </div>
            <div class="action-content">
              <div class="action-title">Sign Out</div>
              <div class="action-subtitle">End your session</div>
            </div>
          </a>
        </div>
      </div>
      <% } else { %>
      <div class="mobile-auth-section">
        <a href="/user/login" class="mobile-auth-btn login">
          <div class="mobile-btn-icon">
            <i class="fas fa-sign-in-alt"></i>
          </div>
          <span class="mobile-btn-text">Sign In</span>
        </a>
        <a href="/user/signup" class="mobile-auth-btn signup">
          <div class="mobile-btn-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <span class="mobile-btn-text">Get Started</span>
        </a>
      </div>
      <% } %>
    </div>
  </div>
</nav>
