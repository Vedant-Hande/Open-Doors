<!-- Premium Modern Navbar -->
<nav class="premium-navbar">
  <div class="navbar-container">
    <!-- Brand Section -->
    <div class="navbar-brand">
      <a href="/listing" class="brand-wrapper">
        <div class="brand-icon">
          <div class="icon-bg">
            <i class="fas fa-home"></i>
          </div>
          <div class="icon-glow"></div>
        </div>
        <div class="brand-text">
          <span class="brand-title">Open Doors</span>
          <span class="brand-subtitle">Premium Properties</span>
        </div>
      </a>
    </div>

    <!-- Desktop Navigation -->
    <div class="navbar-nav">
      <div class="nav-links">
        <a href="/listing" class="nav-item">
          <div class="nav-icon">
            <i class="fas fa-home"></i>
          </div>
          <span class="nav-text">Home</span>
          <div class="nav-indicator"></div>
        </a>
        <a href="/listing" class="nav-item">
          <div class="nav-icon">
            <i class="fas fa-search"></i>
          </div>
          <span class="nav-text">Explore</span>
          <div class="nav-indicator"></div>
        </a>
        <a href="/listing/new" class="nav-item premium">
          <div class="nav-icon">
            <i class="fas fa-plus"></i>
          </div>
          <span class="nav-text">List Property</span>
          <div class="nav-indicator"></div>
          <div class="premium-badge">Pro</div>
        </a>
      </div>

      <!-- User Section -->
      <div class="navbar-user">
        <% if (typeof user !== 'undefined' && user) { %>
        <!-- Logged In User -->
        <div class="user-card">
          <div class="user-avatar-section">
            <div class="user-avatar">
              <div class="avatar-bg">
                <i class="fas fa-user"></i>
              </div>
              <div class="avatar-ring"></div>
              <div class="status-indicator online"></div>
            </div>
          </div>
          <div class="user-details">
            <div class="user-greeting">Welcome back,</div>
            <div class="user-name"><%= user.firstName %></div>
            <div class="user-badge">
              <i class="fas fa-crown"></i>
              <span><%= user.accountType %></span>
            </div>
          </div>
          <div class="user-menu">
            <button
              class="menu-trigger"
              type="button"
              data-bs-toggle="dropdown">
              <i class="fas fa-ellipsis-v"></i>
            </button>
            <div class="dropdown-menu premium-dropdown">
              <div class="dropdown-header">
                <div class="header-avatar">
                  <i class="fas fa-user"></i>
                </div>
                <div class="header-info">
                  <div class="header-name">
                    <%= user.firstName %> <%= user.lastName %>
                  </div>
                  <div class="header-email"><%= user.email %></div>
                </div>
              </div>
              <div class="dropdown-divider"></div>
              <a href="/user/profile" class="dropdown-item">
                <div class="item-icon">
                  <i class="fas fa-user-circle"></i>
                </div>
                <div class="item-content">
                  <div class="item-title">My Profile</div>
                  <div class="item-subtitle">Manage your account</div>
                </div>
