<% layout('layouts/boilerplate') %>
<body>
  <h1>Edit your listing</h1>
  <form action="/listing/<%= editListing._id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      value="<%= editListing.title %>"
      required /><br /><br />

    <label for="description">Description:</label><br />
    <textarea id="description" name="desc" rows="4" cols="50" required>
<%=editListing.desc %></textarea
    >
    <br /><br />

    <label for="price">Price:</label>
    <input
      type="number"
      id="price"
      name="price"
      value="<%= editListing.price %>"
      required /><br /><br />

    <label for="image">Image:</label>
    <input
      type="text"
      id="image"
      name="image"
      value="<%= editListing.image.url %>" /><br /><br />

    <label for="location">Location:</label>
    <input
      type="text"
      id="location"
      name="location"
      value="<%= editListing.location %>"
      required /><br /><br />
    <label for="country">Country:</label>
    <input
      type="text"
      id="country"
      name="country"
      value="<%= editListing.country %>"
      required /><br /><br />
    <button type="submit">Update Listing</button>
  </form>
</body>
